<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <cn.edu.ecust.myandroidapp.widget.CustomTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="随机匹配"
        app:showBackButton="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center">

            <!-- 匹配状态 -->
            <TextView
                android:id="@+id/tv_match_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="正在为您寻找匹配..."
                android:textSize="14sp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:background="@drawable/status_background"
                android:padding="12dp" />

            <!-- 用户卡片 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- 用户头像 -->
                    <ImageView
                        android:id="@+id/iv_user_avatar"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="16dp"
                        android:src="@drawable/ic_default_avatar"
                        android:contentDescription="用户头像"
                        android:scaleType="centerCrop" />

                    <!-- 用户姓名 -->
                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginBottom="8dp" />

                    <!-- 年龄和性别 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/tv_user_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25岁"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:id="@+id/tv_user_gender"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="男"
                            android:textSize="16sp"
                            android:textColor="@color/colorPrimary" />

                    </LinearLayout>

                    <!-- 兴趣爱好 -->
                    <TextView
                        android:id="@+id/tv_user_interests"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="兴趣：音乐, 电影, 运动"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/user_info_background"
                        android:padding="12dp" />

                    <!-- 距离信息 -->
                    <TextView
                        android:id="@+id/tv_user_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="距离：2.5km"
                        android:textSize="12sp"
                        android:textColor="@color/colorAccent"
                        android:drawableStart="@drawable/ic_location"
                        android:drawablePadding="4dp"
                        android:gravity="center_vertical" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- 操作按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_reject"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="跳过"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/colorAccent"
                    android:drawableTop="@drawable/ic_arrow_forward"
                    android:drawablePadding="8dp" />

                <Button
                    android:id="@+id/btn_accept"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="喜欢"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@color/colorPrimary"
                    android:drawableTop="@drawable/ic_favorite"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
