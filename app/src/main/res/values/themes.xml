<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Base.Theme.MyAndroidApp" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 状态栏和导航栏 -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>

        <!-- 文本颜色 -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>

        <!-- 背景色 -->
        <item name="android:windowBackground">@color/white</item>

        <!-- 按钮样式 -->
        <item name="buttonStyle">@style/AppButtonStyle</item>
    </style>

    <style name="Theme.MyAndroidApp" parent="Base.Theme.MyAndroidApp" />

    <!-- 自定义按钮样式 -->
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

</resources>